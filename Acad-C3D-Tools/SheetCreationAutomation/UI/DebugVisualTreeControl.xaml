<UserControl x:Class="SheetCreationAutomation.UI.DebugVisualTreeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource BackgroundBrush}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Automation Debug Log"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Margin="0,0,0,2" />
            <TextBlock Text="Live runtime log from View Frame automation (wizard waits, selectors, failures)."
                       Style="{StaticResource LabelStyle}"
                       Margin="0,0,0,8" />
            <StackPanel Orientation="Horizontal">
                <Button Content="Copy Log"
                        Command="{Binding CopyLogCommand}"
                        Width="120" />
                <Button Content="Clear Log"
                        Command="{Binding ClearLogCommand}"
                        Width="120"
                        Margin="8,0,0,0" />
            </StackPanel>
        </StackPanel>

        <Border Grid.Row="1"
                CornerRadius="6"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1">
            <TextBox Text="{Binding LogText, Mode=OneWay}"
                     IsReadOnly="True"
                     AcceptsReturn="True"
                     TextWrapping="NoWrap"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     FontFamily="Consolas"
                     FontSize="12"
                     Padding="8" />
        </Border>
    </Grid>
</UserControl>
