<UserControl x:Class="NSLOAD.Views.NsLoadPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:NSLOAD.ViewModels"
             Background="#3B4453">
    <UserControl.Resources>
        <Color x:Key="BgColor">#3B4453</Color>
        <Color x:Key="SurfaceColor">#2D3442</Color>
        <Color x:Key="AccentColor">#63B3ED</Color>
        <Color x:Key="DangerColor">#E53E3E</Color>
        <Color x:Key="SuccessColor">#48BB78</Color>
        <Color x:Key="FgColor">#E2E8F0</Color>
        <Color x:Key="MutedColor">#A0AEC0</Color>

        <SolidColorBrush x:Key="BgBrush" Color="{StaticResource BgColor}"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
        <SolidColorBrush x:Key="FgBrush" Color="{StaticResource FgColor}"/>
        <SolidColorBrush x:Key="MutedBrush" Color="{StaticResource MutedColor}"/>

        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style x:Key="BtnBase" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource FgBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AccentBtn" TargetType="Button" BasedOn="{StaticResource BtnBase}">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="SurfaceBtn" TargetType="Button" BasedOn="{StaticResource BtnBase}">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        </Style>

        <Style x:Key="DangerBtn" TargetType="Button" BasedOn="{StaticResource BtnBase}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource DangerBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
            <Setter Property="Padding" Value="6,3"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource FgBrush}"/>
            <Setter Property="BorderBrush" Value="#4A5568"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="CaretBrush" Value="{StaticResource FgBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush"
                                        Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource FgBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <DataTemplate x:Key="AppItemTemplate" DataType="{x:Type vm:AppItemViewModel}">
            <Border Background="{StaticResource SurfaceBrush}"
                    CornerRadius="6" Padding="10" Margin="0,0,0,6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0" Margin="0,0,0,6">
                        <Button DockPanel.Dock="Right"
                                Content="X" FontSize="10"
                                Command="{Binding DataContext.RemovePluginCommand,
                                    RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding Name}"
                                ToolTip="Remove plugin">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource DangerBtn}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsPredefined}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Ellipse DockPanel.Dock="Left"
                                 Width="10" Height="10"
                                 Margin="0,0,8,0"
                                 VerticalAlignment="Center">
                            <Ellipse.Style>
                                <Style TargetType="Ellipse">
                                    <Setter Property="Fill" Value="{StaticResource MutedBrush}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsLoaded}" Value="True">
                                            <Setter Property="Fill"
                                                    Value="{StaticResource SuccessBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Name}"
                                       Foreground="{StaticResource FgBrush}"
                                       FontWeight="SemiBold" FontSize="13"/>
                            <TextBlock Text="{Binding Status}"
                                       Foreground="{StaticResource MutedBrush}"
                                       FontSize="11" Margin="8,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </DockPanel>

                    <DockPanel Grid.Row="1">
                        <CheckBox DockPanel.Dock="Right"
                                  Content="Auto-load"
                                  FontSize="11"
                                  IsChecked="{Binding AutoLoad}"
                                  VerticalAlignment="Center"
                                  Margin="8,0,0,0"/>

                        <StackPanel Orientation="Horizontal">
                            <Button Style="{StaticResource AccentBtn}"
                                    Content="Load" FontSize="11"
                                    Padding="8,3" Margin="0,0,4,0"
                                    Command="{Binding DataContext.LoadAppCommand,
                                        RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding Name}"
                                    IsEnabled="{Binding IsLoaded, Converter={x:Static vm:InvertBoolConverter.Instance}}"/>
                            <Button Style="{StaticResource DangerBtn}"
                                    Content="Unload" FontSize="11"
                                    Padding="8,3"
                                    Command="{Binding DataContext.UnloadAppCommand,
                                        RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding Name}"
                                    IsEnabled="{Binding IsLoaded}"/>
                        </StackPanel>
                    </DockPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <DockPanel>
        <Border DockPanel.Dock="Bottom" Background="{StaticResource SurfaceBrush}"
                Padding="8">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{StaticResource AccentBtn}"
                        Content="+ Add Plugin"
                        Command="{Binding ShowAddPluginCommand}"/>
            </StackPanel>
        </Border>

        <Border DockPanel.Dock="Bottom"
                Background="{StaticResource SurfaceBrush}"
                Padding="12" Margin="0,0,0,1"
                Visibility="{Binding IsAddingPlugin, Converter={StaticResource BoolToVis}}">
            <StackPanel>
                <TextBlock Text="Add New Plugin" FontSize="14" FontWeight="SemiBold"
                           Foreground="{StaticResource FgBrush}" Margin="0,0,0,8"/>

                <TextBlock Text="Name" Foreground="{StaticResource MutedBrush}"
                           FontSize="11" Margin="0,0,0,2"/>
                <TextBox Text="{Binding NewPluginName, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,6"/>

                <TextBlock Text="DLL Path" Foreground="{StaticResource MutedBrush}"
                           FontSize="11" Margin="0,0,0,2"/>
                <DockPanel Margin="0,0,0,6">
                    <Button DockPanel.Dock="Right"
                            Style="{StaticResource SurfaceBtn}"
                            Content="Browse..."
                            Command="{Binding BrowseDllCommand}"
                            Margin="4,0,0,0"/>
                    <TextBox Text="{Binding NewPluginDllPath, UpdateSourceTrigger=PropertyChanged}"/>
                </DockPanel>

                <CheckBox Content="Load on Startup"
                          IsChecked="{Binding NewPluginLoadOnStartup}"
                          Margin="0,0,0,8"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource SurfaceBtn}" Content="Cancel"
                            Command="{Binding CancelAddPluginCommand}"
                            Margin="0,0,8,0"/>
                    <Button Style="{StaticResource AccentBtn}" Content="Add"
                            Command="{Binding ConfirmAddPluginCommand}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="8">
                <TextBlock Text="Predefined Apps" FontSize="14" FontWeight="SemiBold"
                           Foreground="{StaticResource FgBrush}" Margin="0,4,0,8"
                           Visibility="{Binding HasPredefinedApps, Converter={StaticResource BoolToVis}}"/>
                <ItemsControl ItemsSource="{Binding PredefinedApps}"
                              ItemTemplate="{StaticResource AppItemTemplate}"
                              Visibility="{Binding HasPredefinedApps, Converter={StaticResource BoolToVis}}"/>

                <Border Height="1" Background="#4A5568" Margin="0,8,0,8"
                        Visibility="{Binding HasUserPlugins, Converter={StaticResource BoolToVis}}"/>

                <TextBlock Text="User Plugins" FontSize="14" FontWeight="SemiBold"
                           Foreground="{StaticResource FgBrush}" Margin="0,0,0,8"
                           Visibility="{Binding HasUserPlugins, Converter={StaticResource BoolToVis}}"/>
                <ItemsControl ItemsSource="{Binding UserPlugins}"
                              ItemTemplate="{StaticResource AppItemTemplate}"
                              Visibility="{Binding HasUserPlugins, Converter={StaticResource BoolToVis}}"/>

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding HasPredefinedApps}" Value="False"/>
                                        <Condition Binding="{Binding HasUserPlugins}" Value="False"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <TextBlock Text="No plugins configured"
                               Foreground="{StaticResource MutedBrush}"
                               FontSize="16" HorizontalAlignment="Center"
                               Margin="0,0,0,12"/>
                    <TextBlock Text="Click '+ Add Plugin' below to get started."
                               Foreground="{StaticResource MutedBrush}"
                               FontSize="12" HorizontalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
