<Window x:Class="DimensioneringV2.UI.CacheStatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="Cache &amp; Thread Pool Statistics"
        Height="800" Width="900"
        Background="{DynamicResource Background}" 
        Foreground="{DynamicResource Text}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cache Statistics summary -->
        <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left column: Time and Status -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Execution Time" FontWeight="Bold" FontSize="12" Foreground="Gray"/>
                    <TextBlock Text="{Binding ElapsedTime}" FontSize="28" FontWeight="Bold" Margin="0,5,0,10"/>
                    
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Status: " FontWeight="Bold"/>
                        <TextBlock>
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="Stopped"/>
                                    <Setter Property="Foreground" Value="Gray"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                            <Setter Property="Text" Value="Running"/>
                                            <Setter Property="Foreground" Value="Green"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>

                <!-- Middle column: Hits/Misses -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="Cache Performance" FontWeight="Bold" FontSize="12" Foreground="Gray"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Hits: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding Hits, StringFormat={}{0:N0}}" Foreground="Green"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Misses: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding Misses, StringFormat={}{0:N0}}" Foreground="Red"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Hit Rate: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding HitRate, StringFormat={}{0:F1}%}"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Stored: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding UniqueEntriesStored, StringFormat={}{0:N0}}" Foreground="Orange"/>
                    </StackPanel>
                </StackPanel>

                <!-- Right column: Calculations -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                    <TextBlock Text="Calculations" FontWeight="Bold" FontSize="12" Foreground="Gray"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Total: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding TotalCalculations, StringFormat={}{0:N0}}"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Rate: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding CalculationsPerSecond, StringFormat={}{0:F0}/s}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Thread Pool Statistics -->
        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Thread Pool" FontWeight="Bold" FontSize="12" Foreground="Gray"/>
                    <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                        <TextBlock Text="Busy: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding BusyWorkerThreads}"/>
                        <TextBlock Text=" / "/>
                        <TextBlock Text="{Binding MaxWorkerThreads}"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="Utilization" FontWeight="Bold" FontSize="12" Foreground="Gray"/>
                    <TextBlock Text="{Binding WorkerUtilization, StringFormat={}{0:F1}%}" FontSize="18" Margin="0,3,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="Green"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsThreadPoolStressed}" Value="True">
                                        <Setter Property="Foreground" Value="Red"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="Peak Workers" FontWeight="Bold" FontSize="12" Foreground="Gray"/>
                    <TextBlock Text="{Binding PeakBusyWorkers}" FontSize="18" Foreground="Orange" Margin="0,3,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="3" HorizontalAlignment="Right">
                    <TextBlock Text="Starvation Events" FontWeight="Bold" FontSize="12" Foreground="Gray"/>
                    <TextBlock FontSize="18" Margin="0,3,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="{Binding StarvationEvents}"/>
                                <Setter Property="Foreground" Value="Green"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding StarvationEvents}" Value="0">
                                        <Setter Property="Text" Value="None"/>
                                    </DataTrigger>
                                    <Trigger Property="Text" Value="0">
                                        <Setter Property="Foreground" Value="Green"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Binding.TargetUpdated"/>
                        </TextBlock.Triggers>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Hits/Misses Graph -->
        <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="5" Margin="0,0,0,5">
            <oxy:PlotView Model="{Binding HitsMissesPlotModel}"/>
        </Border>

        <!-- Calculations per Second Graph -->
        <Border Grid.Row="3" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="5" Margin="0,0,0,5">
            <oxy:PlotView Model="{Binding CalcPerSecondPlotModel}"/>
        </Border>

        <!-- Thread Pool Utilization Graph -->
        <Border Grid.Row="4" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="5">
            <oxy:PlotView Model="{Binding ThreadPoolPlotModel}"/>
        </Border>
    </Grid>
</Window>
