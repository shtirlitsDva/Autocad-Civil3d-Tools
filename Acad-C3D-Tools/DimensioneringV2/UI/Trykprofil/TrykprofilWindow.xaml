<Window x:Class="DimensioneringV2.UI.Trykprofil.TrykprofilWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DimensioneringV2.UI"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="TrykprofilWindow" Height="450" Width="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <!-- First plot can grow to fill remaining viewport height -->
                <RowDefinition Height="*" />
                <!-- Second plot measured as content; adds to scrollable height -->
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Top plot -->
            <oxy:PlotView Grid.Row="0"
                          Model="{Binding PressurePlot}"
                          MinHeight="300" />

            <!-- Bottom plot -->
            <oxy:PlotView Grid.Row="1"                        
                          Model="{Binding PressurePlot2}"
                          Height="300" />
        </Grid>
    </ScrollViewer>
</Window>