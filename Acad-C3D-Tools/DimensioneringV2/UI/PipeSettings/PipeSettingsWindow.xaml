<Window x:Class="DimensioneringV2.UI.PipeSettings.PipeSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DimensioneringV2.UI.PipeSettings"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Height="550" Width="700"
        MinHeight="400" MinWidth="600"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource Background}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <local:PipeTypeToDnValuesConverter x:Key="PipeTypeToDnValues"/>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="{Binding WindowTitle}" 
                   FontSize="20" 
                   FontWeight="SemiBold" 
                   Foreground="White"
                   Margin="0,0,0,16"/>

        <!-- Toolbar -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,16">
            <Button Style="{StaticResource ToolbarIconButton}"
                    Content="&#xE710;"
                    ToolTip="Tilføj rørtype"
                    Command="{Binding AddCommand}"/>
            <Button Style="{StaticResource ToolbarIconButton}"
                    Content="&#xE74D;"
                    ToolTip="Slet valgt rørtype"
                    Command="{Binding DeleteCommand}"/>
            <Rectangle Width="1" Fill="#FF505050" Margin="8,8"/>
            <Button Style="{StaticResource ToolbarIconButton}"
                    Content="&#xE74A;"
                    ToolTip="Flyt op (højere prioritet)"
                    Command="{Binding MoveUpCommand}"/>
            <Button Style="{StaticResource ToolbarIconButton}"
                    Content="&#xE74B;"
                    ToolTip="Flyt ned (lavere prioritet)"
                    Command="{Binding MoveDownCommand}"/>
        </StackPanel>

        <!-- Priority List -->
        <ListBox Grid.Row="2"
                 ItemsSource="{Binding Priorities}"
                 SelectedItem="{Binding SelectedPriority, Mode=TwoWay}"
                 Background="Transparent"
                 BorderThickness="0"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 HorizontalContentAlignment="Stretch">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource PriorityCardStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Priority Badge -->
                            <Border Grid.Column="0" Style="{StaticResource PriorityBadgeStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="#" Foreground="#FFA0D080" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock Text="{Binding Priority}" Foreground="White" FontWeight="Bold" FontSize="16"/>
                                </StackPanel>
                            </Border>

                            <!-- Pipe Info -->
                            <Grid Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" MinWidth="100"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Pipe Type -->
                                <StackPanel Grid.Column="0" Margin="0,0,24,0">
                                    <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Rørtype"/>
                                    <TextBlock Style="{StaticResource FieldValueStyle}" Text="{Binding PipeType}" FontSize="15"/>
                                </StackPanel>

                                <!-- Min DN -->
                                <StackPanel Grid.Column="1" Margin="0,0,12,0">
                                    <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Min DN"/>
                                    <ComboBox Style="{StaticResource ModernDarkComboBox}"
                                              SelectedValue="{Binding MinDn, Mode=TwoWay}">
                                        <ComboBox.ItemsSource>
                                            <MultiBinding Converter="{StaticResource PipeTypeToDnValues}">
                                                <Binding Path="PipeType"/>
                                                <Binding Path="DataContext.PipeTypes" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                            </MultiBinding>
                                        </ComboBox.ItemsSource>
                                    </ComboBox>
                                </StackPanel>

                                <!-- Max DN -->
                                <StackPanel Grid.Column="2" Margin="0,0,24,0">
                                    <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Max DN"/>
                                    <ComboBox Style="{StaticResource ModernDarkComboBox}"
                                              SelectedValue="{Binding MaxDn, Mode=TwoWay}">
                                        <ComboBox.ItemsSource>
                                            <MultiBinding Converter="{StaticResource PipeTypeToDnValues}">
                                                <Binding Path="PipeType"/>
                                                <Binding Path="DataContext.PipeTypes" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                            </MultiBinding>
                                        </ComboBox.ItemsSource>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>

                            <!-- Edit Buttons -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <!-- Regler Button (SL only) -->
                                <Button Content="Regler..."
                                        Style="{StaticResource SmallEditButtonStyle}"
                                        Margin="0,0,8,0"
                                        Visibility="{Binding DataContext.IsStikledning, RelativeSource={RelativeSource AncestorType=ListBox}, Converter={StaticResource BoolToVis}}"
                                        Command="{Binding DataContext.EditReglerCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                        CommandParameter="{Binding}"/>
                                <!-- Acceptkriterier Button -->
                                <Button Content="Acceptkriterier..."
                                        Style="{StaticResource SmallEditButtonStyle}"
                                        Command="{Binding DataContext.EditAcceptCriteriaCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                        CommandParameter="{Binding}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Empty State -->
        <Border Grid.Row="2" 
                Background="#FF383838" 
                CornerRadius="6"
                Visibility="{Binding IsEmpty, Converter={StaticResource BoolToVis}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="&#xE946;" 
                           FontFamily="Segoe MDL2 Assets" 
                           FontSize="48" 
                           Foreground="#FF606060"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,16"/>
                <TextBlock Text="Ingen rørtyper konfigureret" 
                           FontSize="16" 
                           Foreground="#FF808080"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Klik + for at tilføje en rørtype" 
                           FontSize="13" 
                           Foreground="#FF606060"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Footer Buttons -->
        <Grid Grid.Row="3" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                    Content="Annuller"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Margin="0,0,8,0"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
            <Button Grid.Column="2"
                    Content="Gem ændringer"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Command="{Binding OkCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        </Grid>
    </Grid>
</Window>
