<Window x:Class="DimensioneringV2.UI.PipeSettings.RegelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DimensioneringV2.UI.PipeSettings"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Height="400" Width="500"
        MinHeight="300" MinWidth="400"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource Background}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="{Binding WindowTitle}"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Foreground="White"
                   Margin="0,0,0,16"/>

        <!-- Toolbar -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,16">
            <Button Style="{StaticResource ToolbarIconButton}"
                    Content="&#xE710;"
                    ToolTip="Tilføj regel"
                    Command="{Binding AddCommand}"/>
            <Button Style="{StaticResource ToolbarIconButton}"
                    Content="&#xE74D;"
                    ToolTip="Slet valgt regel"
                    Command="{Binding DeleteCommand}"/>
        </StackPanel>

        <!-- Rules List -->
        <ListBox Grid.Row="2"
                 ItemsSource="{Binding Rules}"
                 SelectedItem="{Binding SelectedRule, Mode=TwoWay}"
                 Background="Transparent"
                 BorderThickness="0"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 HorizontalContentAlignment="Stretch">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type local:RuleViewModelBase}">
                    <Border Style="{StaticResource PriorityCardStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Rule Type Badge -->
                            <Border Grid.Column="0" Style="{StaticResource PriorityBadgeStyle}"
                                    Background="#FF7A5C3D">
                                <TextBlock Text="{Binding RuleTypeName}"
                                           Foreground="White"
                                           FontWeight="SemiBold"
                                           FontSize="12"/>
                            </Border>

                            <!-- Rule Info -->
                            <Grid Grid.Column="1">
                                <StackPanel Margin="0,0,24,0">
                                    <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Beskrivelse"/>
                                    <TextBlock Style="{StaticResource FieldValueStyle}"
                                               Text="{Binding Description}"
                                               FontSize="15"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Empty State -->
        <Border Grid.Row="2"
                Background="#FF383838"
                CornerRadius="6"
                Visibility="{Binding IsEmpty, Converter={StaticResource BoolToVis}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="&#xE946;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="48"
                           Foreground="#FF606060"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,16"/>
                <TextBlock Text="Ingen regler konfigureret"
                           FontSize="16"
                           Foreground="#FF808080"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Prioriteten bruges altid i rækkefølge"
                           FontSize="13"
                           Foreground="#FF606060"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0"/>
                <TextBlock Text="Klik + for at tilføje en forældrerør-regel"
                           FontSize="13"
                           Foreground="#FF606060"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Footer Buttons -->
        <Grid Grid.Row="3" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                    Content="Annuller"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Margin="0,0,8,0"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
            <Button Grid.Column="2"
                    Content="Gem ændringer"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Command="{Binding OkCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        </Grid>
    </Grid>
</Window>
