<Window x:Class="DimensioneringV2.UI.Nyttetimer.ConfigurationEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Rediger Nyttetimer Konfiguration"
        Width="700" Height="500"
        MinWidth="500" MinHeight="300"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource Background}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Inverted BooleanToVisibilityConverter -->
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Konfiguration: " 
                       Style="{StaticResource DialogLabelStyle}"
                       FontWeight="Bold"/>
            <TextBlock Text="{Binding Configuration.Name}" 
                       Style="{StaticResource DialogLabelStyle}"
                       FontWeight="Bold"/>
            <TextBlock Text=" (Skrivebeskyttet)" 
                       Style="{StaticResource DialogLabelStyle}"
                       Visibility="{Binding Configuration.IsDefault, Converter={StaticResource BoolToVis}}"
                       Foreground="Orange"/>
        </StackPanel>

        <!-- Search Box -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="SÃ¸g:" 
                       Style="{StaticResource DialogLabelStyle}"/>
            <TextBox Grid.Column="1" 
                     x:Name="SearchTextBox"
                     TextChanged="SearchTextBox_TextChanged"/>
        </Grid>

        <!-- DataGrid -->
        <DataGrid Grid.Row="2" 
                  x:Name="EntriesDataGrid"
                  ItemsSource="{Binding FilteredEntries}"
                  Style="{StaticResource DarkDataGridStyle}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  SelectionMode="Single"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  VirtualizingStackPanel.IsVirtualizing="True"
                  VirtualizingStackPanel.VirtualizationMode="Recycling"
                  EnableRowVirtualization="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Kode" 
                                    Binding="{Binding AnvendelsesKode}" 
                                    Width="80"
                                    IsReadOnly="True"/>
                <DataGridTextColumn Header="Nyttetimer" 
                                    Binding="{Binding Nyttetimer, UpdateSourceTrigger=PropertyChanged}" 
                                    Width="100"
                                    IsReadOnly="{Binding DataContext.Configuration.IsDefault, RelativeSource={RelativeSource AncestorType=Window}}"/>
                <DataGridTextColumn Header="Beskrivelse" 
                                    Binding="{Binding AnvendelsesTekst}" 
                                    Width="*"
                                    IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Footer with buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Luk" 
                    Style="{StaticResource DialogButtonStyle}"
                    Click="CloseButton_Click"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>

