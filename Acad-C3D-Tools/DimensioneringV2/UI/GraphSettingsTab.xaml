<UserControl x:Class="DimensioneringV2.UI.GraphSettingsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DimensioneringV2.UI"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="704" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary Source="Theme.xaml"/>
    </UserControl.Resources>

    <!-- 
    Ensure that the root or a parent panel has IsSharedSizeScope="True"
    This will allow columns in nested grids that share a SharedSizeGroup name
    to align columns across multiple areas.
    -->
    <ScrollViewer Background="{DynamicResource Background}" 
                  HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical" Grid.IsSharedSizeScope="True">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">

                <Button Content="Save Settings"
            Command="{Binding SaveSettingsCommand}"
            Margin="5,0" />

            </StackPanel>

            <!-- Miscellaneous Settings -->
            <GroupBox Header="Indstillinger for trykprofilsgraf" Foreground="{DynamicResource Text}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <!-- Shared size group for labels -->
                        <ColumnDefinition Width="Auto" SharedSizeGroup="LabelColumn"/>
                        <!-- Shared size group for inputs -->
                        <ColumnDefinition Width="Auto" SharedSizeGroup="InputColumn"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content='Vis linje og tekst for "Min. holdetryk":' Foreground="{DynamicResource Text}" VerticalAlignment="Center"/>
                    <CheckBox Grid.Row="0" Grid.Column="1" Width="50" IsChecked="{Binding Settings.ShowMinimumHoldetrykLineAndLabel}" VerticalAlignment="Center"/>

                    <Label Grid.Row="1" Grid.Column="0" Content='Vis linje og tekst for "Tillæg til holdetryk":' Foreground="{DynamicResource Text}" VerticalAlignment="Center"/>
                    <CheckBox Grid.Row="1" Grid.Column="1" Width="50" IsChecked="{Binding Settings.ShowTillægTilHoldetrykLineAndLabel}" VerticalAlignment="Center"/>
                </Grid>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
