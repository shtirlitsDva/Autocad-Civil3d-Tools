<Window x:Class="DimensioneringV2.UI.SettingsObserver.SettingsObserverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DimensioneringV2.UI"
        mc:Ignorable="d"
        Title="SettingsObserverWindow" Height="450" Width="800"
        Background="{DynamicResource Background}" Foreground="{DynamicResource Text}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <DataGrid ItemsSource="{Binding Entries}"
              Background="{DynamicResource Background}"
              Foreground="{DynamicResource Text}"
              AutoGenerateColumns="False" IsReadOnly="True">
        <!-- Remove row borders -->
        <DataGrid.RowStyle>
            <Style TargetType="DataGridRow">
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
            </Style>
        </DataGrid.RowStyle>

        <!-- Uniform dark cell background, no grid lines -->
        <DataGrid.CellStyle>
            <Style TargetType="DataGridCell">
                <Setter Property="Background" Value="{DynamicResource Background}"/>
                <Setter Property="Foreground" Value="{DynamicResource Text}"/>
                <Setter Property="Padding" Value="5,2,5,2"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
            </Style>
        </DataGrid.CellStyle>

        <!-- Dark theme column headers -->
        <DataGrid.ColumnHeaderStyle>
            <Style TargetType="DataGridColumnHeader">
                <Setter Property="Background" Value="{DynamicResource Background}"/>
                <Setter Property="Foreground" Value="{DynamicResource Text}"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Padding" Value="5,2,5,2"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
            </Style>
        </DataGrid.ColumnHeaderStyle>
        <DataGrid.Columns>
            <DataGridTextColumn Header="Property" Binding="{Binding Name}"  Width="*" />
            <DataGridTextColumn Header="Value"    Binding="{Binding Value}" Width="*" />
        </DataGrid.Columns>
    </DataGrid>
</Window>
