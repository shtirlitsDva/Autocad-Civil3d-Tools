<Window x:Class="DimensioneringV2.UI.Forbrugere.ForbrugereWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Forbrugere" Height="600" Width="1100"
        MinHeight="400" MinWidth="800"
        Background="{DynamicResource Background}" Foreground="{DynamicResource Text}"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Caption button style -->
            <Style x:Key="CaptionButtonStyle" TargetType="Button">
                <Setter Property="Width" Value="46"/>
                <Setter Property="Height" Value="36"/>
                <Setter Property="Foreground" Value="{DynamicResource Text}"/>
                <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
                <Setter Property="FontSize" Value="10"/>
                <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Bg" Background="Transparent">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Bg" Property="Background" Value="#26FFFFFF"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="Bg" Property="Background" Value="#33FFFFFF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Close button with red hover -->
            <Style x:Key="CaptionCloseButtonStyle" TargetType="Button">
                <Setter Property="Width" Value="46"/>
                <Setter Property="Height" Value="36"/>
                <Setter Property="Foreground" Value="{DynamicResource Text}"/>
                <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
                <Setter Property="FontSize" Value="10"/>
                <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Bg" Background="Transparent">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Bg" Property="Background" Value="#FFE81123"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="Bg" Property="Background" Value="#FFB2001A"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="36"
                      ResizeBorderThickness="5"
                      GlassFrameThickness="0"/>
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title bar: title, export button, search bar -->
        <Grid Grid.Row="0" Background="{DynamicResource Background}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="1" Text="Forbrugere"
                       VerticalAlignment="Center" FontSize="13"
                       Foreground="{DynamicResource Text}" Margin="0,0,16,0"/>

            <Button Grid.Column="2" Content="Export Excel"
                    Click="ExportExcel_Click"
                    Style="{StaticResource SecondaryButtonStyle}"
                    WindowChrome.IsHitTestVisibleInChrome="True"
                    VerticalAlignment="Center"/>

            <!-- Search box -->
            <Border Grid.Column="4"
                    Background="#FF1E1E1E" BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1" CornerRadius="3" MinWidth="260" Padding="0"
                    VerticalAlignment="Center"
                    WindowChrome.IsHitTestVisibleInChrome="True">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <!-- Search icon -->
                    <TextBlock Grid.Column="0" Text="&#x1F50D;" FontSize="13"
                               Foreground="#FF888888" VerticalAlignment="Center"
                               Margin="8,0,4,0" IsHitTestVisible="False"/>
                    <!-- Text input -->
                    <TextBox x:Name="SearchBox" Grid.Column="1"
                             Background="Transparent" Foreground="{DynamicResource Text}"
                             BorderThickness="0" VerticalAlignment="Center"
                             Padding="2,4" FontSize="14"
                             TextChanged="SearchBox_TextChanged"
                             KeyDown="SearchBox_KeyDown"/>
                    <!-- Watermark -->
                    <TextBlock x:Name="SearchWatermark" Grid.Column="1"
                               Text="S&#248;g forbrugere..." FontSize="14"
                               Foreground="#FF666666" VerticalAlignment="Center"
                               Margin="4,0,0,0" IsHitTestVisible="False"/>
                    <!-- Clear button -->
                    <Button x:Name="ClearSearchButton" Grid.Column="2"
                            Content="&#x2715;" FontSize="11"
                            Background="Transparent" Foreground="#FF888888"
                            BorderThickness="0" Cursor="Hand"
                            VerticalAlignment="Center" Padding="6,2"
                            Click="ClearSearch_Click" Visibility="Collapsed"/>
                </Grid>
            </Border>

            <!-- Caption buttons -->
            <StackPanel Grid.Column="5" Orientation="Horizontal">
                <Button Content="&#xE921;" Click="MinimizeButton_Click"
                        Style="{StaticResource CaptionButtonStyle}"/>
                <Button x:Name="MaximizeButton" Content="&#xE922;" Click="MaximizeButton_Click"
                        Style="{StaticResource CaptionButtonStyle}"/>
                <Button Content="&#xE8BB;" Click="CloseButton_Click"
                        Style="{StaticResource CaptionCloseButtonStyle}"/>
            </StackPanel>
        </Grid>

        <!-- DataGrid -->
        <DataGrid Grid.Row="1" Margin="8,4,8,8"
                  x:Name="ForbrugereGrid"
                  Style="{StaticResource DarkDataGridStyle}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserSortColumns="True"
                  SelectionMode="Single"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  Sorting="ForbrugereGrid_Sorting">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="FontSize" Value="18"/>
                    <Setter Property="Background" Value="{DynamicResource DarkHeaderBackground}"/>
                    <Setter Property="Foreground" Value="{DynamicResource Text}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="Padding" Value="8,4"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Adresse" Binding="{Binding Adresse}" Width="*"
                                    SortMemberPath="Adresse">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Anvendelse" Binding="{Binding Type}" Width="190"
                                    SortMemberPath="Type">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Binding="{Binding BBRAreal, StringFormat=N0}" Width="Auto"
                                    SortMemberPath="BBRAreal">
                    <DataGridTextColumn.Header>
                        <TextBlock TextAlignment="Center">
                            <Run Text="BBR-areal"/><LineBreak/><Run Text="[m&#178;]"/>
                        </TextBlock>
                    </DataGridTextColumn.Header>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Binding="{Binding Effekt, StringFormat=N2}" Width="Auto"
                                    SortMemberPath="Effekt">
                    <DataGridTextColumn.Header>
                        <TextBlock TextAlignment="Center">
                            <Run Text="Effekt"/><LineBreak/><Run Text="[kW]"/>
                        </TextBlock>
                    </DataGridTextColumn.Header>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Binding="{Binding Aarsforbrug, StringFormat=N2}" Width="Auto"
                                    SortMemberPath="Aarsforbrug">
                    <DataGridTextColumn.Header>
                        <TextBlock TextAlignment="Center">
                            <Run Text="&#197;rsforbrug"/><LineBreak/><Run Text="[MWh]"/>
                        </TextBlock>
                    </DataGridTextColumn.Header>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Binding="{Binding Stiklaengde, StringFormat=N2}" Width="Auto"
                                    SortMemberPath="Stiklaengde">
                    <DataGridTextColumn.Header>
                        <TextBlock TextAlignment="Center">
                            <Run Text="Stikl&#230;ngde"/><LineBreak/><Run Text="[m]"/>
                        </TextBlock>
                    </DataGridTextColumn.Header>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="DN" Binding="{Binding DN}" Width="Auto"
                                    SortMemberPath="DN">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Binding="{Binding Tryktab, StringFormat=N4}" Width="Auto"
                                    SortMemberPath="Tryktab">
                    <DataGridTextColumn.Header>
                        <TextBlock TextAlignment="Center">
                            <Run Text="Tryktab i"/><LineBreak/><Run Text="stikledning"/><LineBreak/><Run Text="[bar]"/>
                        </TextBlock>
                    </DataGridTextColumn.Header>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Binding="{Binding NødvendigtDisponibeltTryk, StringFormat=N2}" Width="Auto"
                    SortMemberPath="NødvendigtDisponibeltTryk">
                    <DataGridTextColumn.Header>
                        <TextBlock TextAlignment="Center">
            <Run Text="Nødvendigt"/><LineBreak/><Run Text="disponibelt"/><LineBreak/><Run Text="tryk"/><LineBreak/><Run Text="[bar]"/>
                        </TextBlock>
                    </DataGridTextColumn.Header>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
