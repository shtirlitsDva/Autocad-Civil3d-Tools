<Window x:Class="DimensioneringV2.UI.CacheTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="Cache Performance Test"
        Height="750" Width="900"
        Background="{DynamicResource Background}" 
        Foreground="{DynamicResource Text}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Warning banner -->
        <Border Grid.Row="0" Background="#FFFACD" BorderBrush="#DAA520" BorderThickness="1" 
                CornerRadius="3" Padding="10" Margin="0,0,0,10">
            <TextBlock Text="âš  Note: Cache is pre-warmed before the test. This simulates real-world usage where the cache fills up during initial calculations, then subsequent lookups benefit from cached results." 
                       TextWrapping="Wrap" Foreground="#8B4513" FontSize="11"/>
        </Border>

        <!-- Control section -->
        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Iterations: " VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,5,0"/>
                <TextBox Grid.Column="1" Text="{Binding IterationsInput, UpdateSourceTrigger=PropertyChanged}" 
                         VerticalAlignment="Center" Padding="5,3" IsEnabled="{Binding CanStart}"/>
                
                <Button Grid.Column="2" Content="Run Test" Padding="15,5" Margin="10,0,5,0"
                        Command="{Binding RunTestCommand}" IsEnabled="{Binding CanStart}"/>
                <Button Grid.Column="3" Content="Stop" Padding="15,5" Margin="5,0,0,0"
                        Command="{Binding StopCommand}" IsEnabled="{Binding IsRunning}"/>
                
                <StackPanel Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="Status: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding CurrentPhase}" Foreground="Cyan"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Progress section -->
        <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Progress bar -->
                <ProgressBar Grid.Row="0" Grid.ColumnSpan="2" Height="25" Margin="0,0,0,5"
                             Value="{Binding ProgressPercent}" Maximum="100"/>

                <!-- Stats -->
                <StackPanel Grid.Row="1" Grid.Column="0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Iterations: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding CurrentIteration, StringFormat={}{0:N0}}"/>
                        <TextBlock Text=" / "/>
                        <TextBlock Text="{Binding TotalIterations, StringFormat={}{0:N0}}"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Elapsed: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding ElapsedTime}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Results summary -->
        <Border Grid.Row="3" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- With Cache results -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="WITH CACHE" FontWeight="Bold" Foreground="Green" FontSize="12"/>
                    <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                        <TextBlock Text="Time: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding WithCacheTimeMs, StringFormat={}{0:N0} ms}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Rate: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding WithCacheRate, StringFormat={}{0:N0}/s}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Hits: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding CacheHits, StringFormat={}{0:N0}}" Foreground="LightGreen"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Misses: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding CacheMisses, StringFormat={}{0:N0}}" Foreground="Salmon"/>
                    </StackPanel>
                </StackPanel>

                <!-- Without Cache results -->
                <StackPanel Grid.Column="1">
                    <TextBlock Text="WITHOUT CACHE" FontWeight="Bold" Foreground="Red" FontSize="12"/>
                    <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                        <TextBlock Text="Time: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding WithoutCacheTimeMs, StringFormat={}{0:N0} ms}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Rate: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding WithoutCacheRate, StringFormat={}{0:N0}/s}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Speedup -->
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock Text="SPEEDUP" FontWeight="Bold" Foreground="Gold" FontSize="12"/>
                    <TextBlock Text="{Binding Speedup, StringFormat={}{0:F1}x}" FontSize="28" FontWeight="Bold" 
                               Foreground="Gold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Graph: With Cache -->
        <Border Grid.Row="4" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="5" Margin="0,0,0,5">
            <oxy:PlotView Model="{Binding WithCachePlotModel}"/>
        </Border>

        <!-- Graph: Without Cache -->
        <Border Grid.Row="5" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="5" Margin="0,0,0,5">
            <oxy:PlotView Model="{Binding WithoutCachePlotModel}"/>
        </Border>

        <!-- Test info -->
        <Border Grid.Row="6" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Test edges: " FontWeight="Bold"/>
                <TextBlock Text="{Binding TestEdgeCount, StringFormat={}{0:N0}}"/>
                <TextBlock Text="  |  " Foreground="Gray"/>
                <TextBlock Text="Unique keys: " FontWeight="Bold"/>
                <TextBlock Text="{Binding UniqueKeyCount, StringFormat={}{0:N0}}"/>
                <TextBlock Text="  |  " Foreground="Gray"/>
                <TextBlock Text="UI update interval: " FontWeight="Bold"/>
                <TextBlock Text="1 second"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
