<Window x:Class="DimensioneringV2.BBRData.Views.CompoundKeyDialog"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Compound Key" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource Background}"
        Foreground="{DynamicResource Text}">
    <Window.Resources>
        <ResourceDictionary Source="../../UI/Theme.xaml"/>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock x:Name="HeaderText" Grid.Row="0"
                   FontSize="13" Margin="0,0,0,10" Foreground="{DynamicResource Text}"/>

        <!-- Parts list -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="PartsPanel">
                <!-- Parts are added dynamically in code-behind -->
            </StackPanel>
        </ScrollViewer>

        <!-- Join mode + Add button -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,10">
            <Button Content="+ Add Part" Click="AddPart_Click"
                    Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0"/>
            <TextBlock Text="Join mode:" VerticalAlignment="Center" Margin="10,0,5,0"
                       Foreground="{DynamicResource Text}"/>
            <RadioButton x:Name="rbSpace" Content="Space separated" IsChecked="True"
                         VerticalAlignment="Center" Margin="5,0" Foreground="{DynamicResource Text}"/>
            <RadioButton x:Name="rbDirect" Content="Direct concat"
                         VerticalAlignment="Center" Margin="5,0" Foreground="{DynamicResource Text}"/>
        </StackPanel>

        <!-- OK / Cancel -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Click="OK_Click" Width="80" Margin="0,0,8,0"
                    Style="{StaticResource PrimaryButtonStyle}"/>
            <Button Content="Cancel" Click="Cancel_Click" Width="80"
                    Style="{StaticResource SecondaryButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
